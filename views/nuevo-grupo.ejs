<main class=" container contenedor-formularios ">
    <h1 class="my-5 titulo-web"><%= nombrePagina %></h1>
    
    <form class="default-form" action="/nuevo-grupo" method="POST" enctype="multipart/form-data">
        <div class="mx-3 my-4">
            <div class="campo">
                <label>Nombre</label>
                <input class="form-control" type="text" name="nombre" placeholder="Nombre Grupo">
            </div>
    
            <div class="campo descripcion form-group">
                <label>Descripción</label>
                <div class="contenedor-editor">
                    <input class="form-control"  type="hidden" id="x" name="descripcion">
                    <trix-editor input="x" class="form-group"></trix-editor>
                </div>
            </div>
            <div class="campo">
                <label>Categoría</label>
                <select class="form-control" name="categoria">
                    <option value="" selected disabled>-- Elige una categoria --</option>
                    <% categorias.forEach(categoria => {  %>
                        <option value="<%= categoria.id %>"><%= categoria.nombre %></option>
    
                    <% })  %>
                </select>
            </div>
            <div class="campo">
                <label>Imagen</label>
                <input class="form-control" type="file" name="imagen">
            </div>
            <div class="campo">
                <label>Sitio Web</label>
                <input class="form-control" type="url" name="url" placeholder="Sitio Web">
            </div>
            <div class="campo enviar">
                <input type="submit" value="Crear Grupo" class="btn btn-rosa">
            </div>
        </div>
       
    </form>
</main>