<div class="container">
    <h1 class="my-5 titulo-web"><%- nombrePagina %></h1>
    <main class="container contenedor-formularios no-padding">
        <div class="card  ">
            <form class="default-form my-3 mx-3" action="/cambiar-password" method="POST">
                <div class="form-group">
                    <label>Password Anterior</label>
                    <input class="form-control" type="password" name="anterior" placeholder="Password Actual" >
                </div>
        
                <div class="form-group">
                    <label>Nuevo Password</label>
                    <input class="form-control" type="password" name="nuevo" placeholder=" Nuevo Password" >
                </div>
        
                <div class=" enviar">
                    <input type="submit" class="btn btn-rosa btn-lg" value="Cambiar Password">
                </div>
            </form>
        </div>
        
    </main>
</div>
