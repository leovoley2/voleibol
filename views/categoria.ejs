<div class="container proximos-eventos">
    <h1 class="titulo-web my-5"><%= nombrePagina %></h1>
    <% if( meetis.length > 0) { %> 
    <div class="grid columnas-md-3 ">
        <% meetis.forEach(meeti => { %> 
        <div class="card">
            <% if(meeti.grupo.imagen) { %> 
                <img src="/uploads/grupos/<%= meeti.grupo.imagen %>">
            <% }else { %>
                <img src="/img/meeti.jpg">
            <% } %> 
            <div class="card-texto">
                <% moment.locale('es') %>
                <% const fecha = meeti.fecha + ' ' + meeti.hora %>  
                <p class="fecha"><%= moment(fecha).format('LLLL') %> Horas </p>
                <a href="/meeti/<%= meeti.slug %>">
                    <h3 class="titulo-web"><%= meeti.titulo %></h3>
                </a>
                <div class="info-autor">
                    <div class="imagen">
                    <% if(meeti.usuario.imagen) { %> 
                        <img src="/uploads/perfiles/<%= meeti.usuario.imagen %>">
                    <% } else { %> 
                        <img src="/img/meeti.jpg">
                    <% } %> 
                    </div>
                    <div class="informacion">
                        <p>Organizado por:</p>
                        <p class="autor"><%= meeti.usuario.nombre%> </p>
                    </div>
                    <div class="boton-card">
                        <a href="/meeti/<%= meeti.slug %>" class="btn-md btn-success btn-block boton-card">Ver m√°s</a>
                    </div>
                </div>

            </div>
        </div><!--card-->
    <% }) %> 
    </div><!--grid-->
<% } else { %> 
    <p>No hay meeti en esta categoria</p>
<% } %> 
</div>